<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".fragments.mainactivity.HorarioFragment">
    <cl.uc.fipezoa.pucassistant.views.mainactivity.HorarioView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/horario_view"
        android:layout_gravity="center"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_fragment_horario_scrollview">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <cl.uc.fipezoa.pucassistant.views.mainactivity.ModuloResumenView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/resumen_view"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/main_fragment_horario_ramos">

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>
