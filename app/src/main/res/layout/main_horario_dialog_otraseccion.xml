<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_horizontal_margin">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="1dp"
            android:background="@color/gray"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CAT"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:textStyle="italic"
            android:id="@+id/main_horario_dialog_otraseccion_tipo"/>
        <View
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="1dp"
            android:background="@color/gray"
            android:layout_gravity="center"/>
    </LinearLayout>
    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cualquiera"
        android:id="@+id/main_horario_dialog_otraseccion_cualquiera"/>
    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mismo horario"
        android:id="@+id/main_horario_dialog_otraseccion_mismo"/>
    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Diferente horario"
        android:id="@+id/main_horario_dialog_otraseccion_dif"/>
    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Elegir horario"
        android:id="@+id/main_horario_dialog_otraseccion_elegir"/>
    <cl.uc.fipezoa.pucassistant.views.mainactivity.HorarioCheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/main_horario_dialog_otraseccion_horario"/>

</LinearLayout>